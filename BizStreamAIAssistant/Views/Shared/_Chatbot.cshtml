<div class="fixed bottom-0 right-0 z-10 w-80 flex flex-col items-end m-5">
    
    <form id="chatForm" class="w-full mb-5 bg-red-00 shadow-[0_0_10px_#00000008] rounded-xl flex-col border border-gray-100"> @*added hidden when done*@
        @* Bot Profile *@
        <div class="p-3 flex items-center gap-2 text-white pb-2 bg-green-30">
            <img src="~/images/robot (1).png" alt="bot" class="bg-[#00C4E9] rounded-full w-10 border-2 p-1" />
            <h2 class="text-lg font-semibold text-[#003D78]">BZAI - AI Agent</h2>
        </div>
        
        <hr/>

        @* Message Big Container *@
        <div id="chatFrame" class="bg-teal-00 p-3 flex flex-col items-end gap-2 overflow-y-auto h-60 text-xs">
            <div id="messageContainer" class="flex flex-col items-end gap-2 bg-white"></div>

            @* @{
                var messages = new[]
                {
                    new { role = "user", text = "Hello!" },
                    new { role = "bot", text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.!" },
                    new { role = "user", text = "Hello!" },
                    new { role = "bot", text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.!" },
                };


                foreach (var message in messages)
                {
                    var cssClass = message.role == "user" 
                    ? "justify-end rounded-xl p-1 px-2 bg-[#003D78] text-white" 
                    : "justify-start p-1 px-2 bg-gray-100 rounded-xl";

                    <div class="@cssClass flex flex-col" id="messageContainer">
                        @{
                            if (message.role == "bot")
                            {   <div class="flex gap-2 justify-start items-center">
                                    <img src="~/images/robot (1).png" alt="bot" class="bg-[#00C4E9] rounded-full w-8 border-2 p-1" />
                                    <p>BZAI</p>
                                </div>
                                
                            }
                        }
                        @message.text
                    </div>
                };
            } *@

        </div>

        @* Input & Send Button *@
        <div class="p-4">
            <div class="bg-yellow-00 flex my-1 p-1 border-2 rounded-2xl items-center">
                <textarea id="queryInput" type="text" rows="1" placeholder="Type your message..." class="border rounded-xl w-full p-1 overflow-hidden"></textarea>
                <button type="submit" class="bg-[#00C4E9] text-white rounded-full w-10 h-8 flex justify-center items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="white" class="w-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                    </svg>
                </button>
            </div>
        </div>
        
        
    </form>

    <button id="chatbotButton" class="bg-[#00C4E9] text-white rounded-full p-3 shadow-lg hover:scale-110 duration-200 ">
        <img src="~/images/robot (1).png" alt="bot" class="w-8" />
    </button>
</div>