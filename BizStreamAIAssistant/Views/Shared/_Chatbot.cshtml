<div class="fixed right-0 bottom-0 w-[26rem] flex flex-col items-end p-5">
    @* Chatbot Frame *@
    <form id="chatForm" class="w-full mb-5 bg-white shadow-[0_0_10px_#00000008] rounded-xl flex flex-col border hidden">@**@
        @* Bot Profile *@
        <div class="p-3 flex items-center gap-2 pb-2">
            <img src="~/images/botProfile.png" alt="bot" class="bg-[#00C4E9] rounded-xl w-10 border-2 p-1" />
            <h2 class="text-lg font-semibold">BZSAI - AI Agent</h2>
        </div><hr/>

        @* Chat Frame *@
        <div id="chatFrame" class="p-3 flex flex-col items-end gap-2 overflow-y-auto h-80">
            <div id="messageContainer" class="w-full h-full flex flex-col gap-2 p-2 overflow-y-auto">
                @await Html.PartialAsync("Components/_TextLoading")
                @await Html.PartialAsync("Components/_BotMessage")
                @await Html.PartialAsync("Components/_UserMessage")

            </div>  
        </div>

        @* Textarea & Send Message Button *@
        <div class="p-4 pb-2 flex flex-col justify-center">
            <div class="flex m-1 p-1 border-2 rounded-2xl items-center">
                <textarea id="queryInput" type="text" rows="2" placeholder="Type your message..." class="border rounded-xl w-full p-1 resize-none"></textarea>
                <button type="submit" class="bg-[#00C4E9] rounded-xl w-10 h-[28px] flex justify-center items-center border-2 hover:scale-105 duration-300 ease-in-out">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="#003D78" class="w-4"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" /></svg>
                </button>
            </div>
            <p class="self-center text-xs text-gray-400 "> AI assistant can make mistakes. Check important info.</p>
        </div>
    </form>

    @* Chatbot Toggle Button *@
    <div class="group flex flex-col items-end gap-3">
        <div id="hoverPrompt" class="relative px-3 justify-center items-center group-hover:block duration-700 ease-in-out p-2 rounded-2xl border-2 bg-[#003D78] border-[#00C4E9] flex animate-bounce hidden"> @**@
            <p class="text-white flex items-center gap-1">Start our chat here 
                <span class="inline-block animate-bounce">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="white" class="w-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
                    </svg>
                </span>
            </p>
            <div class="absolute top-[102%] right-2 border-l-[6px] border-r-[6px] border-t-[6px] border-l-transparent border-r-transparent border-[#00C4E9]"></div>
        </div>
        <button id="chatbotButton" class="bg-[#00C4E9] text-white rounded-xl p-3 shadow-lg hover:scale-110 duration-1000">
            <img src="~/images/botProfile.png" alt="bot" class="w-8" />
        </button>
    </div>
</div>