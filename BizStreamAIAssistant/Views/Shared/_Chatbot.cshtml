<div class="fixed bottom-0 right-0 z-10 w-96 flex flex-col items-end">

    <form id="chatForm" class="bg-white shadow-lg rounded-lg p-4 m-5 flex-col "> @*added hidden when done*@
        @* Bot Profile *@
        <div class="flex items-center gap-2 text-[#003D78] pb-2 ">
            <img src="~/images/robot (1).png" alt="bot" class="bg-[#00C4E9] rounded-full w-10 border-2 p-1" />
            <h2 class="text-lg font-semibold">BZAI</h2>
        </div>
        <hr/>

        @* Message Big Container *@
        <div id="chatFrame" class="flex flex-col items-end gap-2 overflow-y-auto h-48 p-3 text-sm">
            <div id="messageContainer" class="flex flex-col items-end gap-2"></div>

            @* @{
                var messages = new[]
                {
                    new { role = "user", text = "Hello!" },
                    new { role = "bot", text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.!" },
                    new { role = "user", text = "Hello!" },
                    new { role = "bot", text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.!" },
                };


                foreach (var message in messages)
                {
                    var cssClass = message.role == "user" 
                    ? "justify-end rounded-xl p-1 px-2 bg-[#003D78] text-white" 
                    : "justify-start p-1 px-2 bg-gray-100 rounded-xl";

                    <div class="@cssClass flex flex-col" id="messageContainer">
                        @{
                            if (message.role == "bot")
                            {   <div class="flex gap-2 justify-start items-center">
                                    <img src="~/images/robot (1).png" alt="bot" class="bg-[#00C4E9] rounded-full w-8 border-2 p-1" />
                                    <p>BZAI</p>
                                </div>
                                
                            }
                        }
                        @message.text
                    </div>
                };
            } *@

        </div>

        @* Input & Send Button *@
        <div class=" flex p-2 border rounded-full items-center">
            <input id="queryInput" type="text" placeholder="Type your message..." class="border rounded w-full p-2" />
            <button type="submit" class="bg-[#003D78] text-white rounded-full w-10 h-9 flex justify-center items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="white" class="w-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>

            </button>
        </div>
        
    </form>

    <button id="chatbotButton" class="bg-[#00C4E9] text-white rounded-full p-3 m-5 shadow-lg hover:scale-110 duration-200">
        <img src="~/images/robot (1).png" alt="bot" class="w-8" />
    </button>
</div>